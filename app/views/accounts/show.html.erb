<div class="row">
  <div class="col-md-6">
    <h1 class="page-header">Conta</h1>
    <%= render partial: 'accounts/shared/form', locals: {readonly: true} %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
  <!-- /.panel-heading -->
    <div class="panel-body">
    <h2>Todas as entradas</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                <th>Operação</th>
                <th>Origem</th>
                <th>Valor</th>
                <th>Situação</th>
                <th></th>
              </tr>
          </thead>
          <tbody>
              <% @transactions_input.each do |transaction| %>
                <tr class="<%= transaction.status %>">
                  <td><%= t("activerecord.attributes.transaction.type.#{transaction.transaction_type}") %></td>
                  <td><%= transaction.origin.name %></td>
                  <td><%= transaction.amount %></td>
                  <td><%= t("activerecord.attributes.transaction.situation.#{transaction.status}") %></td>
                  <td>
                    <%= link_to transaction_path(transaction), class: "btn btn-primary btn-circle" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
  <!-- /.panel-heading -->
    <div class="panel-body">
      <h2>Todas as saídas</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
              <tr>
                <th>Destino</th>
                <th>Operação</th>
                <th>Valor</th>
                <th>Situação</th>
                <th></th>
              </tr>
          </thead>
          <tbody>
              <% @transactions_output.each do |transaction| %>
                <tr class="<%= transaction.status %>">
                  <td><%= transaction.destination.name %></td>
                  <td><%= t("activerecord.attributes.transaction.type.#{transaction.transaction_type}") %></td>
                  <td><%= transaction.amount %></td>
                  <td><%= t("activerecord.attributes.transaction.situation.#{transaction.status}") %></td>
                  <td>
                    <%= link_to transaction_path(transaction), class: "btn btn-primary btn-circle" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>  