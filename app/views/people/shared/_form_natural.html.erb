<% if @person.errors %>
  <% @person.errors.full_messages.each do |message| %>
    <div class="alert alert-danger">
      <ul>
        <li><%= message %></li>
      </ul>
    </div>
  <% end %>
<% end %>
<%= form_for @person do |f| %>
  <input type="hidden" name="type" value="NaturalPerson">
  <label>Nome completo</label>
  <%= f.text_field :full_name, class: "form-control",readonly: readonly, placeholder: 'Nome completo'  %>

  <label>CPF</label>
  <%= f.text_field :cpf, class: "br_cpf_format form-control",readonly: readonly, placeholder: 'CPF'  %>

  <label>Data de Nascimento</label>
  <% if @person.birthdate %>
    <%= f.text_field :birthdate, value: @person.birthdate.strftime('%d/%m/%Y'), class: "br_date_format form-control",readonly: readonly, placeholder: 'Data de nascimento'  %>
  <% else %>
    <%= f.text_field :birthdate, class: "br_date_format form-control",readonly: readonly, placeholder: 'Data de nascimento'  %>
  <% end %>
  <br />
  <% unless readonly %>
    <%= f.submit "Cadastrar", class: "btn btn-default btn-success" %>
  <% end %>  
<% end %>