<h1 class="page-header">Transações</h1>
<div class="panel panel-default">
  <div class="panel-heading">
      Todas as transações
      <%= link_to new_transaction_path, class: "btn btn-success btn-circle pull-right", style: "margin-top:-5px;" do %>
        <i class="fa fa-plus"></i>
      <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="transaction_list_table">
        <thead>
            <tr>
              <th>#</th>
              <th>Origem</th>
              <th>Operação</th>
              <th>Valor</th>
              <th>Destino</th>
              <th>Situação</th>
              <th></th>
            </tr>
        </thead>
        <tbody>
            <% @transactions.each do |transaction| %>
              <tr class="<%= transaction.status %>">
                <td><%= transaction.id %></td>
                <td><%= transaction.origin.name %></td>
                <td><%= t("activerecord.attributes.transaction.type.#{transaction.transaction_type}") %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.destination.name %></td>
                <td><%= t("activerecord.attributes.transaction.situation.#{transaction.status}") %></td>
                <td style="width: 100px;">
                  <%= link_to transaction_path(transaction), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>